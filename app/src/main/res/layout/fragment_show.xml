            android:id="@+id/tx_articleno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:padding="5dp"
            android:text="Introduction to algorithm"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/paperid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="PaperID"
            android:textSize="15dp"
            android:padding="5dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tx_paperid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:padding="5dp"
            android:text="Introduction to algorithm"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Year"
            android:textSize="15dp"
            android:padding="5dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tx_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:padding="5dp"
            android:text="Introduction to algorithm"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/ownerid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="OwnerID"
            android:textSize="15dp"
            android:padding="5dp"
